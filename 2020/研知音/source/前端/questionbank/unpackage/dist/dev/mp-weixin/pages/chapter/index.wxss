
.u-cell-icon {
		width: 36rpx;
		height: 36rpx;
		margin-right: 8rpx;
}
.nav-wrap {
		padding: 15px;
		position: relative;
}
.lang {
		position: absolute;
		top: 15px;
		right: 15px;
}
.nav-title {

		display: -webkit-box;
		display: -webkit-flex;
		display: flex;

		-webkit-box-orient: horizontal;
		-webkit-box-direction: normal;
		-webkit-flex-direction: row;
		        flex-direction: row;
		-webkit-box-align: center;
		-webkit-align-items: center;
		        align-items: center;
}
.nav-info {
		margin-left: 15px;
}
.nav-title__text {

		display: -webkit-box;
		display: -webkit-flex;
		display: flex;

		color: $u-main-color;
		font-size: 25px;
		font-weight: bold;
}
.logo {
		width: 70px;

		height: auto;
}
.nav-slogan {
		color: $u-tips-color;
		font-size: 14px;
}
.nav-desc {
		margin-top: 10px;
		font-size: 14px;
		color: $u-content-color;
}

